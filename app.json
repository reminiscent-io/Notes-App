{
  "expo": {
    "name": "Voice Notes",
    "slug": "voice-notes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "voicenotes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voicenotes.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Voice Notes needs access to your microphone to record voice notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2D3748",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.voicenotes.app",
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#1A202C"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-audio",
        {
          "microphonePermission": "Voice Notes needs access to your microphone to record voice notes."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
